{
	"compilerOptions": {
		"target": "ESNext",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"isolatedModules": true,
		"noEmit": true,
		"incremental": true,
		"strict": true,
		"skipLibCheck": true,
		"lib": ["esnext"],
		"types": ["node"],
		"outDir": "./dist",
	},
	"exclude": ["node_modules/"],
	"files": ["./index.ts"]
}